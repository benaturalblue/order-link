<style>
  .items-sell-title {
    margin: 50px;
  }
  .items-sell-main {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .new-items .field:last-child {
    margin-right: 0;
  }
  
  .logo_image {
    position: absolute;
    top: 20px;
    left: 30px;
  }
  .fields {
    display: flex;
    margin-bottom: 20px; /* 追加 */
  }
  .new-items {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .field .remove-field {
    margin-left: 10px;
    display: flex;
    align-items: center;
  }

  .weight-bold-text{
    padding-bottom: 10px;
  }
  .items-text-main {
    margin-right: 42px;
  }
  .add-link {
    text-decoration: none;
    color: white;
    padding: 10px;
    background-color: gray;
    margin-left: 600px;
    margin-top: 50px;
  }
  .order-text {
    margin-top: 30px;
    margin-bottom: 30px;
    font-size: 20px;
  }
  .back-btn {
  background: #aaa;
  border: 1px solid #aaa;
  color: #fff;
  padding: 15px 35%;
  text-decoration: none;
  margin-left: 75px;
  
  }
  .submit-btn {
  background: #87CEEB;
  border: 1px solid #87CEEB;
  color: #fff;
  width: 100%;
  height: 50px;
  margin-bottom: 4vh;
  }
  
</style>

<div class="items-sell-contents">
  <div class="items-sell-main">
    <%= link_to image_tag('DF2C122C-D754-4D23-916F-539CB5B324BF.jpg', size: '185x50'), root_path, class:"logo_image" %>
    <h2 class="items-sell-title" style="margin-top: 50px;">品名登録</h2>

    <%= form_with(model: @order, url: orders_path, local: true) do |f| %>
    
    <%= render 'shared/error_messages', model: @order %>

      <div class="field">
        <%= f.label :sending_user_id, class: "weight-bold-text" do %>
          送信先
        <% end %>
        <%= f.collection_select :sending_user_id, User.where.not(id: current_user.id), :id, :company_name, { include_blank: true }, class: "select-field" %>
      </div>
      
      <div class="fields">
        <div class="field">
          <div class="weight-bold-text">
            品名
          </div>
        </div>

        <div class="field">
          <div class="weight-bold-text">
            数量
          </div>
        </div>

        <div class="field">
          <div class="weight-bold-text">
            備考欄
          </div>
        </div>
      </div>

      <div class="new-items">
        <%= f.fields_for :order_items do |item_form| %>
          <%= render 'order_item_fields', f: item_form %>
        <% end %>
      </div>
      
      <div class="links">
        <%= link_to_add_association '追加', f, :order_items, partial: 'order_item_fields', class: "add-link" %>
      </div>
      
      <div class="order-text">
        納品日
        <%= f.date_field :delivery_day, class:"calender" %>
      </div>
    
      <div class="submit_button">
        <%= f.submit "送信する", class:"submit-btn" %>
        <%= link_to 'もどる', root_path, class:"back-btn" %>
      </div>
    <% end %>
  </div>
</div>
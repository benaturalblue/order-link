<style>
.order-edit {
  text-decoration: none;
}
.order-destroy {
  text-decoration: none;
}
.contents {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order-item-index {
  display: flex;
  align-items: center;
  margin: 10px 0;
  font-size: 30px;
}
.title-index {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50px 0px;
}
.edit-delete {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}
.order_item_name {
  padding-right: 20px;
}
.index-delivery {
  margin: 30px;
  font-size: 30px;
}
.order-edit {
  text-align: center;
  background-color: #87CEEB;
  font-size: 24px;
  color: black;
  margin: 10px 0px;
  padding: 2vh 10vw;
}
.order-destroy {
  text-align: center;
  background-color: #87CEEB;
  font-size: 24px;
  color: black;
  margin: 20px 0px;
  padding: 2vh 10vw;
}
.order_item_amount {
  padding-right: 20px;
}
.logo-image {
        width: 260px;
        height: 80px;
        margin-left: 15px;
      }
</style>

<%= link_to image_tag("DF2C122C-D754-4D23-916F-539CB5B324BF.jpg", class:"logo-image"), root_path %>
<div class="title-index">
  <h2>Order Items</h2>
</div>
<div class="contents">
  <div class="index-delivery">
    <span>納品日：</span>
    <%= @order.delivery_day %>
  </div>
  
  <% @order.order_items.each do |order_item| %>
    <div class="order-item-index">
      <p class="order_item_name"><%= order_item.item_name %></p>
      <p class="order_item_amount"><%= order_item.amount %>g</p>
      <p class="order_item_memo"><%= order_item.memo %></p>
    </div>
  <% end %>
</div>

<div class="edit-delete">
  <%= link_to '編集', edit_order_path(@order.id), class: "order-edit" %>
  <%= link_to '削除', order_path(@order.id), method: :delete, class: "order-destroy" %>
</div>

<div class="container">
  <% if user_signed_in? %>
    <%= form_with(model: [@order, @comment] , url: order_comments_path(@order), local: true) do |form| %>
  <%= form.text_area :content, placeholder: "コメントする", rows: "2" %>
  <%= form.submit "SEND" %>
<% end %>
  <% end %>
  <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= comment.user.company_name %>：</strong>
          <%= comment.content %>
        </p>
      <% end %>
    </div>
</div>



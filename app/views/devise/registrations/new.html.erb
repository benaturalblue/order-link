<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.84.0">
    <title>Signup Template · Bootstrap v5.0</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/signup/">
    <!-- Bootstrap core CSS -->
    <link href="/assets/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }
      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
      .form-signup {
        width: 100%;
        max-width: 400px;
        padding: 15px;
        margin: auto;
      }
      .form-signup > :not(button) {
        margin-bottom: 10px;
      }
      .btn-primary {
        background-color: #b4c1d1;
        border-color: #b4c1d1;
        color: black;
      }
      .form-group {
        margin-bottom: 15px;
      }
      .input-number {
        width: 100%;
      }
      .form-text, .input-name, .input-number {
        color: black;
        font-size : 16px;
        text-align: left;
      }
      .h2 {
        margin-bottom: 20px;
      }
      .form-signup .special-border {
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 15px;
        margin-bottom: 20px;
      }
      .form-group label,
      .info-text,
      .form-text {
        font-weight: bold;
      }
    </style>
    <!-- Custom styles for this template -->
  </head>
  <body class="text-center">
    <main class="form-signup">
      <%= form_with(model: @user, class: 'registration-main', url: user_registration_path, local: true) do |f| %>
        <div class="special-border">
          <h2 class="h2 mb-3">新規登録</h2>
        </div>
        <%= render 'shared/error_messages', model: @user %>
        <div class="form-group">
          <label for="floatingCompanyName">事業者名（店名・施設名）</label>
          <%= f.text_field :company_name, class: 'form-control', id: 'floatingCompanyName', maxlength: '40' %>
        </div>
        <div class="form-group">
          <label for="floatingEmail">メールアドレス</label>
          <%= f.email_field :email, class: 'form-control', id: 'floatingEmail' %>
        </div>
        <div class="form-group">
          <label for="floatingPassword">パスワード(6文字以上)</label>
          <%= f.password_field :password, class: 'form-control', id: 'floatingPassword'%>
          <p class="info-text">※英字と数字の両方を含めて設定してください</p>
        </div>
        <div class="form-group">
          <label for="floatingPasswordConfirmation">パスワード(確認)</label>
          <%= f.password_field :password_confirmation, class: 'form-control', id: 'floatingPasswordConfirmation' %>
        </div>
        <div class="form-group">
          <label class="form-text">代表者氏名(全角)</label>
          <div class="row">
            <div class="col">
            <%= f.text_field :last_name, class: 'form-control input-name', id: 'last-name', placeholder: '例) 山田' %>
            </div>
            <div class="col">
            <%= f.text_field :first_name, class: 'form-control input-name', id: 'first-name', placeholder: '例) 太郎' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="form-text">代表者カナ(全角)</label>
          <div class="row">
            <div class="col">
            <%= f.text_field :kana_last_name, class: 'form-control input-name', id: 'last-name-kana', placeholder: '例) ヤマダ' %>
            </div>
            <div class="col">
            <%= f.text_field :kana_first_name, class: 'form-control input-name', id: 'first-name-kana', placeholder: '例) タロウ' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="form-text">電話番号</label>
          <div class='input-group'>
            <%= f.text_field :phone_number, class: 'form-control input-number', id: 'phone-number', placeholder: '例）09012345678', maxlength: '11' %>
          </div>
        </div>
        <%= f.submit '会員登録', class: 'w-100 btn btn-lg btn-primary register-red-btn', style: 'margin-bottom: 10px;' %>
        <%= link_to 'ログインはこちら', new_user_session_path, class: 'w-100 btn btn-lg btn-primary' %>
      <% end %>
    </main>
  </body>
</html>
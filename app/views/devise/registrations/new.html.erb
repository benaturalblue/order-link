<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>

<%= form_with model: @user, url: user_registration_path, method: 'POST', class: 'registration-main', local: true do |f| %>

<%= render 'shared/error_messages', model: f.object %>

<div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">事業者名（店名・施設名）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :company_name, class:"input-default", id:"company_name", placeholder:"例) 鈴木商店", maxlength:"40" %>
</div>

<div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
</div>

<div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
</div>

<div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
</div>

<div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">代表者氏名(全角)</label>
      <span class="indispensable">必須</span>
      <div class='input-name-wrap'>
        <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
        <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 太郎" %>
      </div>
    </div>
</div>
  
<div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">代表者カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :kana_last_name, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_area :kana_first_name, class:"input-name", id:"first-name-kana", placeholder:"例) タロウ" %>
    </div>
</div>

<div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
    </div>
</div>

  <div class='login-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>

<% end %>

<div class="form-group">
<%= link_to "＜ログインはこちら＞", new_user_session_path, class:"sub-login-btn" %>
</div>

</div>